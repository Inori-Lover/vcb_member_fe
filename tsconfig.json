{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "esnext",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "script/**/*.ts",
    "script/**/*.tsx",
    "config/**/*.ts",
    "config/**/*.tsx", "index.d.ts"
  ]
}
